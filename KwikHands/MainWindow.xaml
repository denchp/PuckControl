<Window x:Class="KwikHands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hlx="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="MainWindow" Height="Auto" Width="525">
    <Grid Background="Gray" x:Name="HUDGrid">
        <hlx:HelixViewport3D x:Name="hlxViewport" Height="Auto" Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" ShowViewCube="False">
            <hlx:HelixViewport3D.Camera>
                <PerspectiveCamera x:Name="hlxCamera" FieldOfView="66" Position="0,-25,8" NearPlaneDistance="0.10000000149011612"
                                   FarPlaneDistance="300.0" LookDirection="0,0.8,-.2" UpDirection="0.000000,0.000000,1.000000"/>
            </hlx:HelixViewport3D.Camera>
            <hlx:HelixViewport3D.Children>
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <PointLight Position="4.076245,1.005454,5.903862" Color="#ffffff"/>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
            </hlx:HelixViewport3D.Children>
        </hlx:HelixViewport3D>
        <Canvas x:Name="HUD" Background="{x:Null}"></Canvas>
    </Grid>
</Window>
